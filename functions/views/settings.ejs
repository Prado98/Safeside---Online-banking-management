<!-- Modal Structure -->
<div id="modal1" class="modal">
    <form action="" >
        <div class="modal-content">
          <h4>Change Name</h4>
          <br>
          
            <div class="input-field col s12">
                <input id="name" type="text" class="validate" required>
                <label for="password">New Name</label>
            </div>
          
        </div>
        <div class="modal-footer">
          <a href="#!" type="submit" onclick="changeName()" class="modal-action modal-close waves-effect waves-green btn-flat">Change</a>
        </div>
    </form>
</div>

<div id="modal2" class="modal">
        <form action="" >
            <div class="modal-content">
              <h5>Are you sure you wanna delete this account?</h5>
              <br>
            </div>
            <div class="modal-footer">
              <a href="#!" type="submit" style="color:red" onclick="deleteUser()" class="modal-action modal-close waves-effect waves-green btn-flat">delete</a>
            </div>
        </form>
</div>
